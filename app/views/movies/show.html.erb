<div class="bg-black border-4 border-yellow-600 rounded-lg">
  <div class="bg-red-100">
    <div class=" mx-5 mt-5 flex items-center">
        <p class="flex justify-between font-bold text-3xl text-black"> 
            <%=@movie.name%> <%=@movie.year_of_release%>
        </p>
    </div>
    <div class="mt-3 mx-5 flex items-center">
      <p class="font-semibold text-xl text-yellow-500"> Directed By: 
      <p class="ml-3 font-semibold text-xl text-black"><%=@movie.director%></p>
    </div>
  </div>

  <div class="mt-5 flex justify-center h-screen">
    <% if @movie.pictures.length < 4 %>
      <!-- Single image with larger grid structure -->
      <div class="border rounded-md grid grid-cols-2 gap-5 cursor-pointer">
        <div class="col-span-2">
          <%= image_tag @movie.pictures[0], class:"h-auto w-full object-cover object-center lg:h-full lg:w-full" %>
        </div>
      </div>
    <% else %>
      <!-- Multi-image grid (2x2) -->
      <div class="grid grid-cols-2 gap-3 w-1/2 h-auto cursor-pointer">
        <% @movie.pictures.each do |picture| %>
          <div class="border border-yellow-300 rounded-md border-4 shadow-200">
            <%= image_tag picture, class: "h-full w-full object-cover object-center lg:h-full lg:w-full" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="mt-5 border border-t border-white border-1"></div>
  <div class=" mt-3 flex flex-col text-center justify-center">
    <p class="text-4xl font-bold text-white">Summary of the Movie</p>
    <p class="mt-3 ml-5 mr-5 text-md font-light text-white"><%=@movie.summary%></p>
  </div>
  <div class="mt-5 border border-t border-white border-1"></div>
  <div class="text-white">
  review will come here
  </div>
</div>



